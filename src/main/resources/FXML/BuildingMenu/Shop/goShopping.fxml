<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="160.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.view.graphicView.ShopMenuApp">

    <ImageView fx:id="goShopping" fitHeight="160" fitWidth="600" pickOnBounds="true">
        <image>
            <Image url="@../../../Images/ShopMenu/goShopping.png"/>
        </image>
    </ImageView>

    <ImageView fx:id="gold" fitHeight="66.0" fitWidth="66.0" layoutX="471.0" layoutY="72.0" pickOnBounds="true">
        <image>
            <Image url="@../../../Images/ShopMenu/gold.png"/>
        </image>
    </ImageView>
    <Text fx:id="goldText" layoutX="500.0" layoutY="61.0" text="0">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Text>

    <ImageView fx:id="prevCommodity" fitHeight="30.0" fitWidth="29.0" layoutX="14.0" layoutY="18.0" pickOnBounds="true"/>

    <ImageView fx:id="prev" fitHeight="30.0" fitWidth="42.0" layoutX="62.0" layoutY="18.0" pickOnBounds="true"
        onMouseClicked="#goPrev">
        <image>
            <Image url="@../../../Images/ShopMenu/prev.png"/>
        </image>
    </ImageView>



    <ImageView fx:id="nextCommodity" fitHeight="30.0" fitWidth="29.0" layoutX="170.0" layoutY="18.0" pickOnBounds="true"/>

    <ImageView fx:id="next" fitHeight="30.0" fitWidth="42.0" layoutX="114.0" layoutY="18.0" pickOnBounds="true"
    onMouseClicked="#goNext">
        <image>
            <Image url="@../../../Images/ShopMenu/next.png"/>
        </image>
    </ImageView>



    <ImageView fx:id="commodity" fitHeight="66.0" fitWidth="66.0" layoutX="55.0" layoutY="69.0" pickOnBounds="true"/>


    <Button layoutX="185.0" layoutY="48.0" prefHeight="41.0" prefWidth="198.0" style="-fx-background-color: #fdfd19"
            onMouseClicked="#buying"/>
    <Button layoutX="185.0" layoutY="102.0" prefHeight="41.0" prefWidth="198.0" style="-fx-background-color: #fdfd19"
            onMouseClicked="#selling"/>

    <Text fx:id="buy" layoutX="218.0" layoutY="74.0" text="k" wrappingWidth="132.6279296875">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Text>

    <Text fx:id="sell" layoutX="218.0" layoutY="128.0" text="k" wrappingWidth="132.6279296875">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Text>

</AnchorPane>
